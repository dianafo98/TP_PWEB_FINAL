@model TP_PWEB.Models.RegisterViewModel
@{
    ViewBag.Title = "Crie a sua conta";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Html.RenderPartial("~/Views/Shared/_NavBar.cshtml");
}
<script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h3>Preencha todos os campos.</h3>
    <hr>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="checkbox">
                <h6>@Html.RadioButtonFor(model => model.TipoPerfil, "Cliente", true)  Cliente</h6>
                <h6>@Html.RadioButtonFor(model => model.TipoPerfil, "Empresa", false)  Empresa</h6>
            </div>
        </div>
    </div>
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group-user">
        @Html.LabelFor(m => m.NomeUsr, new { @class = "col-md-2 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.NomeUsr, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group-user">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group-empresa">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-6">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group-empresa">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label" })
        <div class="col-md-6">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="chkpagamento">
            <label class="form-check-label" for="chkpagamento">Adicionar Método de Pagamento e Dados Pessoais (Apenas Cliente)</label>
        </div>
    </div>

    <div id="form-group-pagamento">
        <div class="form-group-user">
            @Html.LabelFor(m => m.DataNasc, new { @class = "col-md-3 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.DataNasc, "{0:dd/MM/yyyy}", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group-user">
            @Html.LabelFor(m => m.Telefone, new { @class = "col-md-3 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Telefone, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group-user">
            @Html.LabelFor(m => m.CartaoNum, new { @class = "col-md-3 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.CartaoNum, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group-user">
            @Html.LabelFor(m => m.CartaoValMonth, new { @class = "col-md-2 control-label" })
            <div class="col-md-2">
                @Html.TextBoxFor(m => m.CartaoValMonth, new { @class = "form-control" })
            </div>
            <div class="col-md-2">
                @Html.TextBoxFor(m => m.CartaoValYear, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group-user">
            @Html.LabelFor(m => m.CartaoCVC, new { @class = "col-md-3 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.CartaoCVC, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group-user">
            @Html.LabelFor(m => m.Dinheiro, new { @class = "col-md-3 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Dinheiro, new { @class = "form-control" })
            </div>
        </div>

    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Registar-me" />
        </div>
    </div>

}



@section Scripts {
   

    <script type='text/javascript'>
        $(document).ready(function () {
            $('#chkpagamento').removeAttr('checked');
            $('#form-group-pagamento').hide();
            $('#chkpagamento').change(function () {
                if (this.checked) {
                    $('#form-group-pagamento').show();
                }
                else {
                    $('#form-group-pagamento').hide();
                }
            });
        });
    </script>
    @Scripts.Render("~/bundles/jqueryval")
}
